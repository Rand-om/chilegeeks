	<div class="uk-container uk-container-center uk-margin-large-top">
		<div class="uk-grid">

			<!-- Formulario de registro -->
			<div class="uk-width-2-4">
				<div class="uk-panel uk-panel-box">
					<h3 class="uk-panel-title">Registrate!</h3>
					<form name="registro" method="post" action="?pag=validar_registro" class="uk-form">
						<div class="uk-form-row">
							<div class="uk-form-controls">
								<div class="uk-form-row">
									<input type="text" onkeyup="inputSuccess(this.id); esconderAlerta('anombre')" name="nombre" id="nombre" placeholder="Nombre" class="uk-form-width-large">
									<div id="anombre" class="uk-alert uk-alert-danger">Debe escribir un nombre</div>
								</div>
								
								<div class="uk-form-row">
									<input type="text" onkeyup="inputSuccess(this.id); esconderAlerta('anick')" name="nick" id="nick" placeholder="Nick" class="uk-form-width-large">
									<div id="anick" class="uk-alert uk-alert-danger">Debe escribir un nick</div>
								</div>
								
								<div class="uk-form-row">
									<input type="text" name="email" onkeyup="inputSuccess(this.id); esconderAlerta('aemail');" id="email" placeholder="Email" class="uk-form-width-large">
									<div id="aemail" class="uk-alert uk-alert-danger">Debe escribir un email</div>
									<div id="aemailv" class="uk-alert uk-alert-danger">Debe ingresar un email válido</div>
								</div>
								
								<div class="uk-form-row">
									<input type="password" onkeyup="inputSuccess(this.id); esconderAlerta('apass')" name="pass" id="pass" placeholder="Contraseña" class="uk-form-width-large">
									<div id="apass" class="uk-alert uk-alert-danger">Debe escribir una contraseña</div>
								</div>
								
								<div class="uk-form-row">
									<input type="password" onkeyup="inputSuccess(this.id); esconderAlerta('apass2');" name="pass2" id="pass2" placeholder="Confirmar contraseña" class="uk-form-width-large">
									<div id="apass" class="uk-alert uk-alert-danger">Debe confirmar la contraseña</div>
									<div id="apass2nc" class="uk-alert uk-alert-danger">Las contraseñas no coinciden</div>
								</div>
								
								<div class="uk-form-row">
									<button id="validar_registro" class="uk-button uk-button-success">Registrarme</button>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
			<!-- Fin formulario de registro -->
			

			<!-- Formulario de Login -->
			<div class="uk-width-2-4">
				<div class="uk-panel uk-panel-box">
					<h3 class="uk-panel-title">Inicia sesión</h3>
					<form name="login" method="post" action="?pag=validar_login" class="uk-form">
						<div class="uk-form-row">
							<div class="uk-form-controls">
								<div class="uk-form-row">
									<input type="text" name="nick" onkeyup="inputSuccess(this.id); esconderAlerta('lonick')" id="lnick" placeholder="Nick" class="uk-form-width-large">
									<div id="lonick" class="uk-alert uk-alert-danger">Debe escribir un nick</div>
								</div>
								
								<div class="uk-form-row">
									<input type="password" name="pass" onkeyup="inputSuccess(this.id); esconderAlerta('lopass')" id="lpass" placeholder="Contraseña" class="uk-form-width-large">
									<div id="lopass" class="uk-alert uk-alert-danger">Debe escribir un nick</div>
								</div>
								
								<div class="uk-form-row">
									<button id="validar_login" class="uk-button uk-button-success">Registrarme</button>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
			<!-- Fin formulario de Login -->

		</div>
	</div>
